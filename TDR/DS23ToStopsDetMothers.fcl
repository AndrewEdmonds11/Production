// Andrei Gaponenko, 2013

#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"

# Give this job a name.
process_name : DS23ToStopsDetMothers

source : { module_type : RootInput }

services : {

    message               : @local::default_message
    TFileService          : { fileName : "histDS23ToStopsDetMothers.root" }
    RandomNumberGenerator : { }

    user : {
        GeometryService        : { inputFile      : "JobConfig/TDR/geom_DS23ToStopsDetMothers.txt" }
        ConditionsService      : { conditionsfile : "Mu2eG4/test/conditions_01.txt"      }
        GlobalConstantsService : { inputFile      : "Mu2eG4/test/globalConstants_01.txt" }
        G4Helper               : { }
        SeedService            : @local::automaticSeeds
    }
}

physics : {

    //================================================================
    producers: {

        g4run : {
            module_type          : G4
            inputSimParticles : "g4filter:s0"
            simParticleNumberOffset : 200000

            generatorModuleLabel : ""
            genInputHits : [ "g4filter:DS2Vacuum", "g4filter:DS3Vacuum" ]

            doWriteLegacyPhysVolumeInfo : false
            inputPhysVolumeMultiInfoLabel : "compressPV"

            SDConfig : {
                enableSD : [ virtualdetector, CRV ] // activate just the explicitly listed SDs
                sensitiveVolumes: [ "TrackerMother", "CalorimeterMother" ]
                preSimulatedHits: ["g4filter:virtualdetector", "g4filter:CRV" ]
            }

            SimParticlePrinter : {
                enabled : false
                primariesOnly : false
                prefix : "SimParticle: "
            }
        }

        compressPVFlash: {
            module_type: CompressPhysicalVolumes
            volumesInput : "g4run"

            hitInputs : [ "flashFilter:TrackerMother",
                          "flashFilter:CalorimeterMother",
                          "flashFilter:CRV",
                          "flashFilter:virtualdetector"
                        ]
            particleInputs : [ "flashFilter:s0" ]
        }

        compressPVStop: {
            module_type: CompressPhysicalVolumes
            volumesInput : "g4run"
            hitInputs : [ "stopFilter:virtualdetector" ]
            particleInputs : [ "stopFilter:s0" ]
        }

        //----------------------------------------------------------------
        stoppedMuonFinder : {
            module_type : StoppedParticlesFinder
            particleInput : "g4run"
            // multiple matches, we'll get the one from the current process, which is what we want
            physVolInfoInput : "g4run"
            stoppingMaterial : "StoppingTarget_Al"
            particleTypes : [ 13 ] // mu-
        }

    } // producers

    //================================================================
    filters: {
        flashFilter: {
            module_type: FilterG4Out
            mainHitInputs: [ "g4run:TrackerMother", "g4run:CalorimeterMother", "g4run:CRV" ]
            extraHitInputs: [ "g4run:virtualdetector" ]
            numSimParticleCollections: 1
            vetoDaughters: [ "stoppedMuonFinder" ]
        }
        stopFilter: {
            module_type: FilterG4Out
            mainHitInputs: []
            extraHitInputs: [ "g4run:virtualdetector" ]
            mainSPPtrInputs: [ "stoppedMuonFinder" ]
            numSimParticleCollections: 1
            vetoDaughters: [ "stoppedMuonFinder" ]
        }
        g4status: {
            module_type: FilterStatusG4
            input: "g4run"
        }
    }

    //================================================================
    analyzers: {
        stoppedMuonPrinter : {
            module_type: StoppedParticlesPrinter
            inputCollection: "stoppedMuonFinder"
            outFileName: "mustops.txt"
        }
        stoppedMuonDumper : {
            module_type: StoppedParticlesDumper
            inputCollection: "stoppedMuonFinder"
            writeProperTime : false
        }
    }

    //================================================================
    beamFlashFilter : [g4run, stoppedMuonFinder, flashFilter, compressPVFlash]
    muonStopFilter : [g4run, stoppedMuonFinder, stopFilter, compressPVStop]
    g4StatusFilter : [g4run, g4status ]
    trigger_paths  : [beamFlashFilter, muonStopFilter, g4StatusFilter]

    out : [beamFlashOutput, muonStopOutput, truncatedEvtsOutput]
    stops : [stoppedMuonPrinter, stoppedMuonDumper]
    end_paths      : [out, stops]
}

outputs: {
    beamFlashOutput : {
        module_type : RootOutput
        SelectEvents: { SelectEvents: [beamFlashFilter] }
        outputCommands:   [ "keep *_*_*_*", "drop *_g4run_*_*", "drop *_stoppedMuonFinder_*_*", "drop *_stopFilter_*_*", "drop *_compressPVStop_*_*", "drop *_*_*_TS3ToDS23", "keep mu2e::StatusG4_*_*_*", "keep mu2e::GenParticles_*_*_*"]
        fileName    : "beamFlashDS23ToStopsDetMothers.root"
    }

    muonStopOutput : {
        module_type : RootOutput
        SelectEvents: { SelectEvents: [muonStopFilter] }
        outputCommands:   [ "keep *_*_*_*", "drop *_g4run_*_*", "drop *_flashFilter_*_*", "drop *_compressPVFlash_*_*", "drop *_*_*_TS3ToDS23", "keep mu2e::StatusG4_*_*_*", "keep mu2e::GenParticles_*_*_*" ]
        fileName    : "muonStopsDS23ToStopsDetMothers.root"
    }

    truncatedEvtsOutput : {
        module_type : RootOutput
        SelectEvents: { SelectEvents: ["!g4StatusFilter"] }
        outputCommands:   [ "keep *_*_*_*", "drop *_*ilter_*_DS23ToStopsDetMothers", "drop *_compress*_*_DS23ToStopsDetMothers", "drop *_*_*_TS3ToDS23", "keep mu2e::StatusG4_*_*_*", "keep mu2e::GenParticles_*_*_*"]
        fileName    : "truncatedDS23ToStopsDetMothers.root"
    }

    fullOutput : {
        module_type : RootOutput
        fileName    : "dataDS23ToStopsDetMothers_full.root"
    }
}

// Initialze seeding of random engines: do not put these lines in base .fcl files for grid jobs.
services.user.SeedService.baseSeed         :  0
services.user.SeedService.maxUniqueEngines :  20
