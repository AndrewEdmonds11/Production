#include "Production/JobConfig/primary/StopParticle.fcl"

physics.PrimaryPath : [ TargetStopResampler, @sequence::Common.generateSequence, @sequence::Common.g4Sequence, @sequence::Primary.SignalSequence ]

outputs : { SignalOutput :@local::Primary.Output }
